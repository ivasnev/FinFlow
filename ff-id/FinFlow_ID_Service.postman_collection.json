{
  "info": {
    "name": "FinFlow ID Service",
    "description": "FinFlow Identity Service API для управления пользователями, аутентификацией и сессиями",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345678"
  },
  "item": [
    {
      "name": "Аутентификация",
      "description": "Методы для регистрации, входа и управления токенами",
      "item": [
        {
          "name": "Регистрация",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"StrongPassword123\",\n    \"nickname\": \"user123\",\n    \"name\": \"John Doe\",\n    \"phone\": \"+71234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "register"
              ]
            },
            "description": "Регистрирует нового пользователя в системе."
          },
          "response": []
        },
        {
          "name": "Вход",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"login\": \"user@example.com\",\n    \"password\": \"StrongPassword123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "login"
              ]
            },
            "description": "Аутентифицирует пользователя и создает новую сессию."
          },
          "response": []
        },
        {
          "name": "Обновление токена",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/refresh",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "refresh"
              ]
            },
            "description": "Обновляет access-токен с помощью refresh-токена."
          },
          "response": []
        },
        {
          "name": "Выход",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/logout",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "logout"
              ]
            },
            "description": "Завершает текущую сессию пользователя."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Пользователи",
      "description": "Методы для работы с пользователями",
      "item": [
        {
          "name": "Получение информации о пользователе",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/users/{{nickname}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "users",
                "{{nickname}}"
              ]
            },
            "description": "Возвращает информацию о пользователе по его никнейму."
          },
          "response": []
        },
        {
          "name": "Обновление профиля",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"nickname\": \"updated_nickname\",\n    \"name\": \"Updated Name\",\n    \"phone\": \"+79876543210\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users/me",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "users",
                "me"
              ]
            },
            "description": "Обновляет информацию о текущем пользователе."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Сессии",
      "description": "Методы для работы с сессиями пользователя",
      "item": [
        {
          "name": "Получение сессий",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "sessions"
              ]
            },
            "description": "Возвращает список активных сессий текущего пользователя."
          },
          "response": []
        },
        {
          "name": "Завершение сессии",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "sessions",
                "{{session_id}}"
              ]
            },
            "description": "Завершает указанную сессию текущего пользователя."
          },
          "response": []
        }
      ]
    },
    {
      "name": "История входов",
      "description": "Методы для работы с историей входов пользователя",
      "item": [
        {
          "name": "Получение истории входов",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/login-history?limit=10&offset=0",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "login-history"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            },
            "description": "Возвращает историю входов текущего пользователя с пагинацией."
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Автоматическое сохранение токенов при входе или обновлении",
          "if (pm.response.code === 200 || pm.response.code === 201) {",
          "    const jsonData = pm.response.json();",
          "    if (jsonData && jsonData.access_token) {",
          "        pm.environment.set('access_token', jsonData.access_token);",
          "    }",
          "    if (jsonData && jsonData.refresh_token) {",
          "        pm.environment.set('refresh_token', jsonData.refresh_token);",
          "    }",
          "    if (jsonData && jsonData.user && jsonData.user.nickname) {",
          "        pm.environment.set('nickname', jsonData.user.nickname);",
          "    }",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8083",
      "type": "string"
    }
  ]
} 