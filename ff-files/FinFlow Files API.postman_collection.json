    {
      "name": "Временная ссылка",
      "item": [
        {
          "name": "Генерация временной ссылки - Успешная",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус код 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Ответ содержит временную ссылку', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('status');",
                  "    pm.expect(jsonData).to.have.property('data');",
                  "    pm.expect(jsonData.data).to.have.property('url');",
                  "    pm.expect(jsonData.data).to.have.property('expires_at');",
                  "});",
                  "",
                  "pm.test('Время истечения в будущем', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const expiresAt = new Date(jsonData.data.expires_at);",
                  "    const now = new Date();",
                  "    pm.expect(expiresAt.getTime()).to.be.above(now.getTime());",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-TVM-Ticket",
                "value": "{{tvm_ticket}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/files/{{file_id}}/temporary-url?expires_in=3600",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "files", "{{file_id}}", "temporary-url"],
              "query": [
                {
                  "key": "expires_in",
                  "value": "3600"
                }
              ]
            },
            "description": "Генерация временной ссылки для доступа к файлу. Ссылка действительна указанное время в секундах."
          },
