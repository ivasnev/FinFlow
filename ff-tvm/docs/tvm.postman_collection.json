{
  "info": {
    "name": "FinFlow TVM API - Integration Tests",
    "description": "Интеграционные тесты для FinFlow TVM (Ticket-based Verification Module) API на основе актуальной спецификации OpenAPI",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345678"
  },
  "item": [
    {
      "name": "Сервисы",
      "description": "Управление сервисами",
      "item": [
        {
          "name": "Создание сервиса - Успешное",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус код 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Ответ содержит информацию о сервисе', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('name');",
                  "    pm.expect(jsonData).to.have.property('public_key');",
                  "    pm.expect(jsonData).to.have.property('private_key');",
                  "    ",
                  "    // Сохранение данных для последующих тестов",
                  "    pm.environment.set('service_id', jsonData.id);",
                  "    pm.environment.set('service_private_key', jsonData.private_key);",
                  "    pm.environment.set('service_public_key', jsonData.public_key);",
                  "});",
                  "",
                  "pm.test('Ключи не пустые', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.public_key).to.not.be.empty;",
                  "    pm.expect(jsonData.private_key).to.not.be.empty;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"test-service\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/service",
              "host": ["{{base_url}}"],
              "path": ["service"]
            },
            "description": "Создает новый сервис и возвращает его идентификатор и ключи ED25519"
          },
          "response": []
        },
        {
          "name": "Создание сервиса - Невалидные данные",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус код 400', function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test('Ответ содержит ошибку', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/service",
              "host": ["{{base_url}}"],
              "path": ["service"]
            },
            "description": "Попытка создать сервис с пустым именем должна вернуть 400."
          },
          "response": []
        },
        {
          "name": "Получение публичного ключа - Успешное",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус код 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Ответ содержит публичный ключ', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('public_key');",
                  "    pm.expect(jsonData.public_key).to.not.be.empty;",
                  "});",
                  "",
                  "pm.test('Публичный ключ совпадает с сохраненным', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const savedKey = pm.environment.get('service_public_key');",
                  "    if (savedKey) {",
                  "        pm.expect(jsonData.public_key).to.equal(savedKey);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/service/{{service_id}}/key",
              "host": ["{{base_url}}"],
              "path": ["service", "{{service_id}}", "key"]
            },
            "description": "Возвращает публичный ключ сервиса по его ID для валидации тикетов"
          },
          "response": []
        },
        {
          "name": "Получение публичного ключа - Сервис не найден",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус код 404', function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "",
                  "pm.test('Ответ содержит ошибку', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/service/99999/key",
              "host": ["{{base_url}}"],
              "path": ["service", "99999", "key"]
            },
            "description": "Попытка получить публичный ключ несуществующего сервиса должна вернуть 404."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Тикеты",
      "description": "Генерация тикетов доступа",
      "item": [
        {
          "name": "Создать второй сервис для теста",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус код 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "const jsonData = pm.response.json();",
                  "pm.environment.set('target_service_id', jsonData.id);",
                  "pm.environment.set('target_service_public_key', jsonData.public_key);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"target-service\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/service",
              "host": ["{{base_url}}"],
              "path": ["service"]
            },
            "description": "Создает второй сервис для тестирования генерации тикетов"
          },
          "response": []
        },
        {
          "name": "Предоставить доступ",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус код 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Ответ содержит сообщение об успехе', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('message');",
                  "    pm.expect(jsonData.message).to.include('access granted');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"from\": {{service_id}},\n    \"to\": {{target_service_id}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/access/grant",
              "host": ["{{base_url}}"],
              "path": ["access", "grant"]
            },
            "description": "Предоставляет право доступа от одного сервиса к другому"
          },
          "response": []
        },
        {
          "name": "Генерация тикета - Успешная",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус код 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Ответ содержит тикет', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('ticket');",
                  "    pm.expect(jsonData.ticket).to.not.be.empty;",
                  "    ",
                  "    // Сохранение тикета для последующих тестов",
                  "    pm.environment.set('tvm_ticket', jsonData.ticket);",
                  "});",
                  "",
                  "pm.test('Тикет имеет правильный формат', function () {",
                  "    const jsonData = pm.response.json();",
                  "    // Формат: serv:base64(serviceID):base64(ticketJSON)",
                  "    pm.expect(jsonData.ticket).to.match(/^serv:/);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"from\": {{service_id}},\n    \"to\": {{target_service_id}},\n    \"secret\": \"{{service_private_key}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/ticket",
              "host": ["{{base_url}}"],
              "path": ["ticket"]
            },
            "description": "Генерирует подписанный тикет для доступа от одного сервиса к другому."
          },
          "response": []
        },
        {
          "name": "Генерация тикета - Неверный секрет",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус код 400 или 500', function () {",
                  "    pm.expect([400, 500]).to.include(pm.response.code);",
                  "});",
                  "",
                  "pm.test('Ответ содержит ошибку', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"from\": {{service_id}},\n    \"to\": {{target_service_id}},\n    \"secret\": \"invalid_secret_key\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/ticket",
              "host": ["{{base_url}}"],
              "path": ["ticket"]
            },
            "description": "Попытка сгенерировать тикет с неверным секретом должна вернуть ошибку."
          },
          "response": []
        },
        {
          "name": "Генерация тикета - Нет доступа",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Статус код 500', function () {",
                  "    pm.response.to.have.status(500);",
                  "});",
                  "",
                  "pm.test('Ответ содержит ошибку', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"from\": {{service_id}},\n    \"to\": 99999,\n    \"secret\": \"{{service_private_key}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/ticket",
              "host": ["{{base_url}}"],
              "path": ["ticket"]
            },
            "description": "Попытка сгенерировать тикет без предоставленного доступа должна вернуть ошибку."
          },
          "response": []
        }
      ]
    },
